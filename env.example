# =============================================================================
# VideoRooms Production Environment Variables
# =============================================================================
#
# Copy this file to .env and fill in the values:
#   cp env.example .env
#   nano .env
#
# =============================================================================

# =============================================================================
# REQUIRED: Network Configuration
# =============================================================================

# Your server's PUBLIC IP address (REQUIRED!)
# Get it with: curl -4 ifconfig.me
EXTERNAL_IP=YOUR_SERVER_PUBLIC_IP

# Your domain name (REQUIRED for SSL)
DOMAIN=richislav.com

# =============================================================================
# REQUIRED: Security Keys
# =============================================================================

# LiveKit API credentials
# Generate with: openssl rand -hex 16
LIVEKIT_API_KEY=your_api_key_here

# LiveKit API secret (minimum 32 characters!)
# Generate with: openssl rand -hex 32
LIVEKIT_API_SECRET=your_api_secret_minimum_32_characters_here

# Phoenix secret key base
# Generate with: openssl rand -hex 64
SECRET_KEY_BASE=your_secret_key_base_here_must_be_at_least_64_chars

# =============================================================================
# LiveKit URLs
# =============================================================================

# Public LiveKit URL (what clients will connect to)
# For development: ws://localhost:7880
# For production with SSL: wss://YOUR_DOMAIN:7880
LIVEKIT_PUBLIC_URL=wss://richislav.com:7880

# =============================================================================
# Optional: SSL Configuration
# =============================================================================

# Set to 'true' to enable SSL (requires domain and certificates)
ENABLE_SSL=false

# =============================================================================
# Optional: Debug Settings
# =============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info
